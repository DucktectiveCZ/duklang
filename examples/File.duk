import Foundation.Os.Unix.OutStreamHandle;
import Foundation.Data.Buffer;
import Foundation.Primitives.Str;

group Io;

class FileWriter {
  let _handle: Arc<OutStreamHandle>;

  pub fun write(data: Buffer)
    => _handle.ref().write(data);

  pub fun writeStr(str: Str)
    => _handle.ref().write(str.bytes());
}

